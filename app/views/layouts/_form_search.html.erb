<div class="form-inline">
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word,class: 'form-control mx-2' %>
    <%= f.button :type => "submit", style: 'border-style: none; color: #fff;', class: 'bg-dark' do %>
      <i class="fa-solid fa-magnifying-glass"></i>
    <% end %>
  <% end %>
</div>