<% reviews.each do |review| %>
  <div class="flex border shadow-md mb-3 rounded-md p-5 ml-2">
    <div class="h-full my-auto">
      <%= link_to item_path(review.item) do %>
        <%= image_tag review.item.image.variant(resize: "110x110^", gravity: "center", crop: "110x110+0+0").processed, class: 'hover:opacity-75' %>
      <% end %>
    <p class="font-bold mt-1 whitespace-nowrap text-center text-sm text-gray-400"><%= review.item.name %></p>
    </div>
    <div class="mt-3 ml-auto">
      <span class="flex" id="star2<%= review.id %>"></span>
    </div>
    <p class="mt-3 ml-2 text-gray-500"><%= review.rate %></p>
    <p class="w-96 text-gray-400 text-sm line-clamp-4 mx-auto mt-3 h-full"><%= review.comment %></p>
    <% if (user_signed_in? && current_user.admin) || current_user == review.user %>
      <span class="ml-auto p-3"><%= link_to "編集",edit_item_review_path(review), class: 'text-pur1 hover:text-purple-800' %></span>
    <% end %>
  </div>

  <script>
  $('#star2<%= review.id %>').empty();
  $('#star2<%= review.id %>').raty({
    size      : 36,
    starOff   : '<%= asset_path('star-off.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    starOn    : '<%= asset_path('star-on.png') %>',
    half      : false,
    readOnly: true,
    score: <%= review.rate %>,
  });
  </script>
<% end %>