<div class="mt-10 mb-10">
  <div class="w-1/3 h-1/3 mx-auto my-5">
    <%= image_tag @user.get_profile_image(600,600), class: 'rounded-full w-1/2 mx-auto bg-white' %>
      <p class="text-center text-pink-200 mt-3 font-medium"><%= @user.name %></p>
      <div class="text-center">
        <% if (current_user == @user || current_user.admin?) && current_user.name != "ゲスト" %>
          <div class="my-5">
            <%= link_to edit_user_path(@user), class: 'p-3 px-4 bg-transparent rounded-3xl text-gray-400 hover:bg-twibg' do %>
              <i class="far fa-address-card"></i> プロフィール編集
            <% end %>
          </div>
          <div class="mt-5">
            <%= link_to favorites_user_path(@user), class: 'p-3 px-4 bg-transparent rounded-3xl text-gray-400 hover:bg-twibg' do %>
              <i class="far fa-bookmark"></i> ブックマーク
            <% end %>
          </div>
        <% end %>
      </div>
  </div>
  <div class="">
    <%= render '/users/reviews', reviews: @reviews %>
    <div class="mx-auto mt-10 text-pink-200 text-lg">
      <div class="pt-1 bg-gradient-to-r from-purple-300 to-pink-300"></div>
        <div class="pt-4"><%= paginate @reviews %></div>
    </div>
  </div>
</div>