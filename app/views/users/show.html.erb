<div class="container mx-auto mt-10">
    <div class="grid grid-cols-7 grid-flow-col">
      <div class="col-span-2">
        <%= image_tag @user.get_profile_image(200,200), class: 'rounded-full mx-auto bg-white' %>
          <p class="text-center text-pink-300 mt-1"><%= @user.name %></p>
          <% if (current_user == @user || current_user.admin?) && current_user.name != "ゲスト" %>
            <p class="text-center text-gray-400 hover:opacity-75 mt-10"><%= link_to "プロフィール変更", edit_user_path(@user) %></p>
            <p class="text-center text-gray-400 hover:opacity-75 mt-3">
              <%= link_to "ブックマーク", favorites_user_path(@user) %>
            </p>
          <% end %>
      </div>
      <div class="col-span-5">
        <%= render 'reviews', reviews: @reviews %>
      </div>
    </div>
  </div>
</div>