<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <div class="text-center">
        <%= image_tag @user.get_profile_image(200,200), class: 'rounded-circle' %>
        <p><%= @user.name %></p>
        <% if current_user == @user %>
          <%= link_to "プロフィール変更", edit_user_path(@user) %>
        <% end %>
      </div>
    </div>
    <div class="col-md-9">
      <%= render 'reviews', reviews: @reviews %>
    </div>
  </div>
</div>