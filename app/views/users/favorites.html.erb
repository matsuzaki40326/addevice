<div class="container mx-auto mt-5 mb-5">
  <div class="flex w-full flex-wrap gap-6 ml-10">
    <% @favorite_items.each do |item| %>
      <div class="bg-twibg shadow-lg rounded-md">
        <%= link_to item_path(item) do %>
          <%= image_tag item.image.variant(resize: "200x200^", gravity: "center", crop: "200x200+0+0").processed, class: 'hover:opacity-75' %>
        <% end %>
        <div class="py-4 text-sm text-center mt-2 relative">
          <span class="text-gray-300"><%= item.name %></span>
          <span class="absolute top-1 right-1">
            <% if user_signed_in? && current_user == @user %>
              <% if item.favorited_by?(current_user) %>
                <%= link_to item_favorites_path(item), method: :delete, class: 'text-ratyyellow text-lg' do %>
                  <i class="fa-solid fa-bookmark"></i>
                <% end %>
              <% end %>
            <% end %>
          </span>
        </div>
      </div>
    <% end %>
  </div>
</div>