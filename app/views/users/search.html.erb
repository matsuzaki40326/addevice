<div class="container mt-5 mx-auto">
  <div class="grid">
    <div class="col-start-2 col-end-3">
      <div class="mb-5"><%= render 'search' %></div>
      <table class="table-auto">
        <thead>
          <tr></tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="py-3">
                <%= link_to user_path(user), class: 'hover:opacity-75' do %>
                  <span><%= image_tag user.get_profile_image(60,60), class: 'rounded-full mr-2 hover:opacity-75 bg-white' %></span>
                <% end %>
              </td>
              <td>
                <%= link_to user_path(user), class: 'hover:opacity-75' do %>
                  <span class="text-pink-300"><%= user.name %></span>
                <% end %>
              </td>
              <td class="px-32">
                <% if user.is_deleted == true %>
                  <span class="text-gray-300">退会済み</span>
                <% else %>
                  <span class="text-gray-300">会員</span>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>