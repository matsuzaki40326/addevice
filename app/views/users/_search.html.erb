<div>
  <%= form_with url: user_search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word, placeholder: "name", class: 'xs:w-60 md:w-3/5 lg:w-1/2 xl:w-1/3 p-2 bg-twibg text-gray-200 text-sm focus:ring-4 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400 placeholder-opacity-50' %>
    <%= f.button :type => "submit", class: 'text-teal300 h-9 w-9 rounded-full focus:ring-4 focus:ring-teal300 ml-3' do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
</div>