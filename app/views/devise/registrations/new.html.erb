<div class="container mx-auto text-gray-400 mt-28">
  <div class="text-center">
    <p class="text-2xl font-bold my-5 text-pink-300">新規登録</p>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user' do |f| %>
      <% if @user.errors.any? %>
      <% end %>

      <div class="field pb-5">
        <%= f.label :名前 %><br />
        <% if @user.errors.include?(:name) %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'mt-1 w-1/3 p-2 bg-gray-700 text-gray-400 text-sm focus:ring-1 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400 border-2 border-red-400' %>
          <p class="text-red-400 pt-3">
            <i class="fas fa-exclamation-circle mr-1"></i>
            <%= @user.errors.full_messages_for(:name).first %>
          </p>
        <% else %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'mt-1 w-1/3 p-2 bg-gray-700 text-gray-400 text-sm focus:ring-4 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400' %>
        <% end %>
      </div>

      <div class="field pb-5">
        <%= f.label :email %><br />
        <% if @user.errors.include?(:email) %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 w-1/3 p-2 bg-gray-700 text-gray-400 text-sm focus:ring-1 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400 border-2 border-red-400' %>
          <p class="text-red-400 pt-3">
            <i class="fas fa-exclamation-circle mr-1"></i>
            <%= @user.errors.full_messages_for(:email).first %>
          </p>
        <% else %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 w-1/3 p-2 bg-gray-700 text-gray-400 text-sm focus:ring-4 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400' %>
        <% end %>
      </div>

      <div class="field pb-5">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <% if @user.errors.include?(:password) %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'mt-1 w-1/3 p-2 bg-gray-700 text-gray-400 text-sm focus:ring-1 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400 border-2 border-red-400' %>
          <p class="text-red-400 pt-3">
            <i class="fas fa-exclamation-circle mr-1"></i>
            <%= @user.errors.full_messages_for(:password).first %>
          </p>
        <% else %>
          <%= f.password_field :password, autocomplete: "new-password", class: 'mt-1 w-1/3 p-2 bg-gray-700 text-gray-400 text-sm focus:ring-4 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400' %>
        <% end %>
      </div>

      <div class="field pb-5">
        <%= f.label :password_confirmation %><br />
        <% if @user.errors.include?(:password_confirmation) %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 w-1/3 p-2 bg-gray-700 text-gray-400 text-sm focus:ring-1 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400 border-2 border-red-400' %>
          <p class="text-red-400 pt-3">
            <i class="fas fa-exclamation-circle mr-1"></i>
            <%= @user.errors.full_messages_for(:password_confirmation).first %>
          </p>
        <% else %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 w-1/3 p-2 bg-gray-700 text-gray-400 text-sm focus:ring-4 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400' %>
        <% end %>
      </div>

      <div class="actions mt-10">
        <%= button_tag(type: "submit") do %>
          <div class="<%= btn %>">登録</div>
        <% end %>
      </div>
    <% end %>
    <p class="mt-10 mb-10 text-gray-400">ログインは <%= link_to "こちら",new_user_session_path, class: 'text-pink-300 hover:opacity-75' %></p>
  </div>
</div>



