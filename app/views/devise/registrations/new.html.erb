<div class="container mx-auto text-gray-400 mt-28">
  <div class="text-center">
    <p class="text-2xl font-bold my-5 text-pink-300">新規登録</p>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user' do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :名前 %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'mt-3 mb-10 w-1/3 p-2 bg-gray-700 text-gray-400 text-sm focus:ring-4 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400' %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-3 mb-10 w-1/3 p-2 bg-gray-700 text-gray-400 text-sm focus:ring-4 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'mt-3 mb-10 w-1/3 p-2 bg-gray-700 text-gray-400 text-sm focus:ring-4 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-3 mb-10 w-1/3 p-2 bg-gray-700 text-gray-400 text-sm focus:ring-4 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400' %>
      </div>

      <div class="actions mt-10">
        <%= button_tag(type: "submit") do %>
          <div class="<%= btn %>">登録</div>
        <% end %>
      </div>
    <% end %>
    <p class="mt-10 text-gray-400">ログインは <%= link_to "こちら",new_user_session_path, class: 'text-pink-300 hover:opacity-75' %></p>
</div>