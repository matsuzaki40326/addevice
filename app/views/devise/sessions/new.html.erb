<div class="container mx-auto text-gray-400 mt-40">
  <div class="text-center">
    <p class="text-2xl font-bold my-5 text-pink-200">ログイン</p>
    <%= form_with model: @user, url: user_session_path do |f| %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-3 mb-5 w-1/3 p-2 bg-gray-700 text-gray-200 text-sm focus:ring-4 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400' %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'mt-3 mb-10 w-1/3 p-2 bg-gray-700 text-gray-200 text-sm focus:ring-4 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mt-10">
        <%= button_tag(type: "submit") do %>
          <div class="<%= btn %>">ログイン</div>
        <% end %>
      </div>
    <% end %>
    <p class="mt-10">新規登録は <%= link_to "こちら",new_user_registration_path, class: 'text-pink-200 hover:opacity-75' %></p>
</div>