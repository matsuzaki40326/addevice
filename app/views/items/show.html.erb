<div class="flex w-full mx-auto justify-center py-10 rounded-md">
  <div class="shadow-lg bg-twibg lg:w-96 rounded-md h-full">
    <%= image_tag @item.image.variant(resize: "800x800^", gravity: "center", crop: "800x800+0+0").processed, class: 'w-full rounded' %>
    <div class="relative text-center py-3">
      <p class="text-gray-300 mt-3 font-black"><%= @item.name %></p>
      <div id="average"><%= render '/items/average', average: @average, review_count: @review_count %></div>
      <span id="favorite_btn<%= @item.id %>"><%= render '/items/favorite_btn', item: @item %></span>
      <% if current_user.admin? %>
        <%= link_to edit_item_path(@item), class: 'text-gray-400 absolute bottom-2 right-2' do %>
          <i class="fas fa-edit hover:opacity-75"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="w-1/3 flex flex-col gap-3 py-5  border-gray-600 bg-twibg rounded-md ml-5">
    <p class="text-ratyyellow text-center font-semibold">評価別</p>
    <%= link_to item_path(@item,rate: "1"), data: {"turbolinks" => false} do %>
      <div class="flex justify-center hover:opacity-75" id="star11"></div>
    <% end %>
    <%= link_to item_path(@item,rate: "2"), data: {"turbolinks" => false} do %>
      <div class="flex justify-center hover:opacity-75" id="star12"></div>
    <% end %>
    <%= link_to item_path(@item,rate: "3"), data: {"turbolinks" => false} do %>
      <div class="flex justify-center hover:opacity-75" id="star13"></div>
    <% end %>
    <%= link_to item_path(@item,rate: "4"), data: {"turbolinks" => false} do %>
      <div class="flex justify-center hover:opacity-75" id="star14"></div>
    <% end %>
    <%= link_to item_path(@item,rate: "5"), data: {"turbolinks" => false} do %>
      <div class="flex justify-center hover:opacity-75" id="star15"></div>
    <% end %>
    <%= render 'form',item: @item, review: @review %>
  </div>
</div>
<div class="scroll-list jscroll h-full pb-5">
  <div class="mt-5 mb-5 h-full reviews_ajax">
    <%= render '/items/reviews', reviews: @reviews %>
  </div>
  <div class="hidden"><%= paginate @reviews %></div>
</div>


