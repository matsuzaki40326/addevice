<div class="container mx-auto mt-5 mb-5">
    <div class="grid grid-cols-3 grid-flow-col">
      <div class="col-span-1 mr-3 shadow-md border rounded-xl">
        <div class="">
          <%= image_tag @item.image.variant(resize: "300x300^", gravity: "center", crop: "300x300+0+0").processed, class: 'w-full' %>
        </div>
        <div class="relative text-center">
          <p class=" text-pur1 mt-3 font-bold"><%= @item.name %></p>
          <p class="flex mt-5 justify-center" id="star3"></p>
        <%= render 'average', average: @average %>
          <% if user_signed_in? %>
            <% if @item.favorited_by?(current_user) %>
              <%= link_to item_favorites_path(@item), method: :delete, class: 'text-pur1 absolute top-0 right-2 text-2xl' do %>
                <i class="fa-solid fa-bookmark"></i>
              <% end %>
             <% else %>
              <%= link_to item_favorites_path(@item), method: :post, class: 'text-pur1 absolute top-0 right-2 text-2xl' do %>
                <i class="fa-regular fa-bookmark"></i>
              <% end %>
            <% end %>
          <% end %>
          <% if user_signed_in? && current_user.admin? %>
            <%= link_to "編集", edit_item_path(@item), class: 'text-pur1 absolute bottom-0 right-2' %>
          <% end %>
        </div>
        <%= render 'form',item: @item, review: @review %>
      </div>
      <div class="col-span-2">
        <%= render 'reviews', reviews: @reviews %>
      </div>
    </div>
  </div>
</div>