<div class="flex w-full mx-auto justify-center py-10 rounded-md">
  <div class="shadow-lg bg-twibg lg:w-96 rounded-md h-full border-r border-gray-600">
    <%= image_tag @item.image.variant(resize: "800x800^", gravity: "center", crop: "800x800+0+0").processed, class: 'w-full rounded' %>
    <div class="relative text-center py-3">
      <p class=" text-gray-300 mt-3 font-bold"><%= @item.name %></p>
      <div id="average">
        <%= render '/items/average', average: @average %>
      </div>
      <span id="favorite_btn<%= @item.id %>">
        <%= render '/items/favorite_btn', item: @item %>
      </span>
      <% if current_user.admin? %>
        <%= link_to edit_item_path(@item), class: 'text-gray-400 absolute bottom-2 right-2' do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hover:opacity-75" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="w-1/3 flex flex-col gap-5 py-5  border-gray-600 bg-twibg rounded-md">
    <p class="text-ratyyellow text-center font-semibold">評価別</p>
    <%= link_to item_path(@item,rate: "1") do %>
      <div class="flex justify-center hover:opacity-75" id="star11"></div>
    <% end %>
    <%= link_to item_path(@item,rate: "2") do %>
      <div class="flex justify-center hover:opacity-75" id="star12"></div>
    <% end %>
    <%= link_to item_path(@item,rate: "3") do %>
      <div class="flex justify-center hover:opacity-75" id="star13"></div>
    <% end %>
    <%= link_to item_path(@item,rate: "4") do %>
      <div class="flex justify-center hover:opacity-75" id="star14"></div>
    <% end %>
    <%= link_to item_path(@item,rate: "5") do %>
      <div class="flex justify-center hover:opacity-75" id="star15"></div>
    <% end %>
    <%= render 'form',item: @item, review: @review %>
  </div>
</div>
<div>
  <div id="reviews_ajax" class="mt-5 mb-5">
    <%= render 'reviews', reviews: @reviews %>
  </div>
  <div class="py-10">
    <%= paginate @reviews %>
  </div>
</div>

<script>
  $('#star11').empty();
  $('#star11').raty({
    size      : 36,
    starOff   : '<%= asset_path('star-off.png') %>',
    starOn    : '<%= asset_path('star-on.png') %>',
    half      : false,
    readOnly: true,
    score: 1,
  });
  $('#star12').empty();
  $('#star12').raty({
    size      : 36,
    starOff   : '<%= asset_path('star-off.png') %>',
    starOn    : '<%= asset_path('star-on.png') %>',
    half      : false,
    readOnly: true,
    score: 2,
  });
  $('#star13').empty();
  $('#star13').raty({
    size      : 36,
    starOff   : '<%= asset_path('star-off.png') %>',
    starOn    : '<%= asset_path('star-on.png') %>',
    half      : false,
    readOnly: true,
    score: 3,
  });
  $('#star14').empty();
  $('#star14').raty({
    size      : 36,
    starOff   : '<%= asset_path('star-off.png') %>',
    starOn    : '<%= asset_path('star-on.png') %>',
    half      : false,
    readOnly: true,
    score: 4,
  });
  $('#star15').empty();
  $('#star15').raty({
    size      : 36,
    starOff   : '<%= asset_path('star-off.png') %>',
    starOn    : '<%= asset_path('star-on.png') %>',
    half      : false,
    readOnly: true,
    score: 5,
  });
</script>