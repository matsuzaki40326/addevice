<div class="container mx-auto mt-5 mb-5">
    <div class="flex max-h-5/6">
      <div class="shadow-lg bg-twibg w-96 rounded-md h-full mr-10">
        <div>
          <%= image_tag @item.image.variant(resize: "800x800^", gravity: "center", crop: "800x800+0+0").processed, class: 'w-full rounded' %>
        </div>
        <div class="relative text-center">
          <p class=" text-gray-300 mt-3 font-bold"><%= @item.name %></p>
          <div id="average">
            <%= render '/items/average', average: @average %>
          </div>
          <span id="favorite_btn<%= @item.id %>">
            <%= render 'favorite_btn', item: @item %>
          </span>
          <% if current_user.admin? %>
            <%= link_to edit_item_path(@item), class: 'text-gray-400 absolute bottom-0 right-2' do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hover:opacity-75" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
            <% end %>
          <% end %>
        </div>
        <%= render 'form',item: @item, review: @review %>
      </div>
      <div>
        <div id="reviews_ajax">
          <%= render 'reviews', reviews: @reviews %>
        </div>
        <%= paginate @reviews %>
      </div>
    </div>
  </div>
</div>