<% if @item.favorited_by?(current_user) %>
  <%= link_to item_favorites_path(item), method: :delete, remote: true, class: 'text-ratyyellow absolute top-2 right-3 text-2xl' do %>
    <i class="fa-solid fa-bookmark"></i>
  <% end %>
<% else %>
  <%= link_to item_favorites_path(item), method: :post, remote: true, class: 'text-gray-400 hover:text-ratyyellow absolute top-2 right-3 text-2xl' do %>
    <i class="fa-regular fa-bookmark"></i>
  <% end %>
<% end %>