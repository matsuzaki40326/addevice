<div>
  <%= form_with url: search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word, required: true, placeholder: "キーワード", class: 'w-40 p-2 bg-gray-700 text-gray-200 text-sm focus:ring-4 focus:ring-purple-400 duration-300 rounded-md placeholder-gray-400' %>
    <%= f.button :type => "submit", class: 'text-pink-200 bg-gray-700  h-9 w-9 rounded-full focus:ring-2 focus:ring-pink-200 ml-3' do %>
      <i class="fas fa-search"></i>
    <% end %>
  <% end %>
</div>