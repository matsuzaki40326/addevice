<div class="container mt-10 mb-5 mx-auto">
  <%= render 'layouts/error', obj: @item %>
  <div class="grid grid-cols-3 text-gray-400">
    <div class="col-span-1 my-auto lg:h-96 p-5 bg-twibg rounded-md shadow-md mx-3">
        <%= form_with model: @item, local: true do |f| %>
          <span class="text-pink-200 flex">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
            <%= f.text_field :name, placeholder: '製品名', class: 'w-1/2 bg-gray-700 text-gray-400 rounded text-sm focus:ring-4 focus:ring-purple-400 p-2 duration-300 ml-2 placeholder-opacity-30 placeholder-white' %><br>
          </span>
          <%= f.file_field :image, class: 'my-10 ' %><br>
          <%= f.collection_select(:maker_id, @makers, :id, :name, {prompt: "メーカー"}, {class: 'border text-black p-1 rounded'}) %><br>
          <%= f.collection_select(:category_id, @categories, :id, :name, {prompt: "カテゴリー"}, {class: 'border mt-3 text-black p-1 rounded'}) %><br>
          <%= button_tag(type: "submit") do %>
            <div class="<%= btn %> mt-10"> 追加</div>
          <% end %>
        <% end %>
    </div>
    <div class="col-span-1 my-auto h-full p-5 bg-twibg rounded-md shadow-md mx-3">
        <%= form_with model: @maker, local: true do |f| %>
          <i class="fas fa-building text-pink-200 mr-1 text-xl"></i>
          <%= f.text_field :name, placeholder: 'メーカー', class: 'w-1/2 bg-gray-700 text-gray-400 rounded text-sm focus:ring-4 focus:ring-purple-400 p-2 duration-300 placeholder-opacity-30 placeholder-white' %>
          <%= button_tag(type: "submit") do %>
            <div class="<%= btn %> mx-2"> 追加</div>
          <% end %>
        <% end %>
      <table class="table-auto">
        <thead>
          <tr></tr>
        </thead>
        <tbody>
          <% @makers.each do |maker| %>
            <tr>
              <td class="py-1">
                <%= link_to maker_path(maker), method: :delete, "data-confirm" => "削除しますか？", class: 'hover:opacity-75' do %>
                  <%= maker.name %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-span-1 my-auto h-full p-5 bg-twibg rounded-md shadow-md mx-3">
        <%= form_with model: @category, local: true do |f| %>
          <i class="fas fa-keyboard mr-1 text-pink-200 text-xl"></i>
          <%= f.text_field :name, placeholder: 'カテゴリー', class: 'w-1/2 bg-gray-700 text-gray-400 rounded text-sm focus:ring-4 focus:ring-purple-400 p-2 duration-300 placeholder-opacity-30 placeholder-white' %>
          <%= button_tag(type: "submit") do %>
            <div class="<%= btn %> mx-2"> 追加</div>
          <% end %>
        <% end %>
      <table class="table-auto">
        <thead>
          <tr></tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td class="py-1">
                <%= link_to category_path(category), method: :delete, "data-confirm" => "削除しますか？", class: 'hover:opacity-75' do %>
                  <%= category.name %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
