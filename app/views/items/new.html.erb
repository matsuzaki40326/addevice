<div class="container mt-5">
  <div class="row">
    <div class="col-md-11">
      <div class="text-center">
        <%= form_with model: @item, local: true do |f| %>
          <%= f.text_field :name %>
          <%= f.file_field :image %>
          <%= f.submit '追加', class: 'btn btn-success' %>
        <% end %>
      </div>
    </div>
  </div>
</div>