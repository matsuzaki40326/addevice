<% if review.good_by?(current_user)%>
  <p class="mr-5">
    <%= link_to item_review_goods_path(review,review.item), method: :delete, remote: true, class: 'text-ratyyellow' do %>
      <i class="fa-solid fa-thumbs-up mx-3"></i><%= review.goods.count %>
    <% end %>
  </p>
<% else %>
  <p class="mr-5">
    <%= link_to item_review_goods_path(review,review.item), method: :post, remote: true, class: 'text-gray-400 hover:text-ratyyellow ' do %>
      <i class="fa-regular fa-thumbs-up mx-3"></i><%= review.goods.count %>
    <% end %>
  </p>
<% end %>