<div class="container mt-5 mx-auto">
    <div class="grid">
      <div class="mx-auto">
        <%= form_with model: @item, local: true do |f| %>
          <%= f.label :"name", class: 'text-gray-400' %>
          <%= f.text_field :name, class: 'bg-gray-100 border border-gray-200 rounded text-gray-800 text-sm focus:ring-pur1 focus:border-pur1 block w-full p-2 mt-1' %><br>
          <%= f.label :image %><br>
          <%= image_tag @item.image.variant(resize: "300x300^",gravity: "center", crop: "300x300+0+0").processed, class: 'mr-5 mt-3' %>
          <div class="mt-10"><%= f.file_field :image, accept: "image/*" %></div>
          <div class="flex relative">
            <button class="mt-10 text-center"><%= f.submit "変更", class: 'px-4 py-2 bg-transparent text-pur1 border border-pur1 rounded hover:text-white hover:bg-pur1' %></button>
            <% if current_user.admin? %>
              <%= link_to "削除", item_path(@item),method: :delete,"data-confirm" => "本当に削除しますか?", class: 'h-1/2 ml-auto mt-auto px-4 py-2 bg-transparent text-red-400 border border-red-400 rounded hover:text-white hover:bg-red-400' %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>