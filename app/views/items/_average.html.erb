 <div class="flex justify-center items-center">
    <span class="flex justify-center my-3 mr-1" id="star3"></span>
    <p class="text-gray-300 opacity-75 pl-3"><%= average.to_f.round(1) %></p>
 </div>
<div class="text-gray-300 opacity-50">
  <i class="far fa-comment"></i>
  <%= review_count %>
</div>
<script>
  $('#star3').empty();
  $('#star3').raty({
    size      : 36,
    starOff   : '<%= asset_path('star-off.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    starOn    : '<%= asset_path('star-on.png') %>',
    half      : false,
    readOnly: true,
    score: <%= average || 0 %>,
  });
</script>