<% reviews.each do |review| %>
  <div class="flex border shadow-md mb-3 rounded-md p-5 ml-2 h-32">
    <div class="h-full my-auto">
      <%= link_to user_path(review.user) do %>
        <%= image_tag review.user.get_profile_image(50,50), class: 'rounded-full hover:opacity-75' %>
      <% end %>
      <p class="font-bold mt-2 whitespace-nowrap text-center"><%= review.user.name %></p>
    </div>
    <div class="mt-3 ml-auto">
      <span class="flex mb-20" id="star2<%= review.id %>"></span>
    </div>
    <p class="mt-3 ml-2 text-gray-500"><%= review.rate %></p>
    <p class="w-96 text-sm text-gray-500 line-clamp-4 mx-auto mt-3"><%= review.comment %></p>
    <% if (user_signed_in? && current_user.admin) || current_user == review.user %>
      <span class="ml-auto"><%= link_to "編集",edit_item_review_path(review), class: 'text-pur1 hover:text-purple-800' %></span>
    <% end %>
    <% if review.good_by?(current_user) && user_signed_in? %>
      <p class="mt-auto">
        <%= link_to item_review_goods_path(review,review.item), method: :delete, class: 'text-gray-400' do %>
          <i class="fa-solid fa-thumbs-up"></i><%= review.goods.count %>
        <% end %>
      </p>
    <% else %>
      <p class="mt-auto">
        <%= link_to item_review_goods_path(review,review.item), method: :post, class: 'text-gray-400' do %>
          <i class="fa-regular fa-thumbs-up"></i><%= review.goods.count %>
        <% end %>
      </p>
    <% end %>
  </div>

  <script>
  $('#star2<%= review.id %>').empty();
  $('#star2<%= review.id %>').raty({
    size      : 36,
    starOff   : '<%= asset_path('star-off.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    starOn    : '<%= asset_path('star-on.png') %>',
    half      : false,
    readOnly: true,
    score: <%= review.rate %>,
  });
  </script>
<% end %>
